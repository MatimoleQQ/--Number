<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/lewo"
        android:layout_margin="80dp"
        android:onClick="zwieksz"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/licznikTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        

        />

    <TextView
        android:id="@+id/licznikTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="60dp"
        app:layout_constraintTop_toBottomOf="@id/imageButton"
        app:layout_constraintLeft_toRightOf="@id/imageButton"
        app:layout_constraintRight_toLeftOf="@id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

       />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/prawo"
        android:layout_margin="80dp"
        android:onClick="zmniejsz"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/licznikTextView"
        />




</androidx.constraintlayout.widget.ConstraintLayout>